<%= form_for @reservation, :html => { :class => 'form-horizontal' } do |f| %>

  <div class="control-group">
    <%= f.label :driver_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :driver_id, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :vehicle_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :vehicle_id, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :inicio, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :inicio, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :fin, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :fin, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :descripcion, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :descripcion, :class => 'text_field' %>
    </div>
  </div>


  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                reservations_path, :class => 'btn' %>
  </div>
<% end %>
