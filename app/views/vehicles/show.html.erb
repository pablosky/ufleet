<%- model_class = Vehicle -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">

  <dt><strong><%= model_class.human_attribute_name(:patente) %>:</strong></dt>
  <dd><%= @vehicle.patente %></dd>

  <dt><strong><%= model_class.human_attribute_name(:marca) %>:</strong></dt>
  <dd><%= @vehicle.marca %></dd>

  <dt><strong><%= model_class.human_attribute_name(:modelovehiculo) %>:</strong></dt>
  <dd><%= @vehicle.modelovehiculo %></dd>

  <dt><strong><%= model_class.human_attribute_name(:aniovehiculo) %>:</strong></dt>
  <dd><%= @vehicle.aniovehiculo %></dd>

  <dt><strong><%= model_class.human_attribute_name(:color) %>:</strong></dt>
  <dd><%= @vehicle.color %></dd>

  <dt><strong><%= model_class.human_attribute_name(:nrchasis) %>:</strong></dt>
  <dd><%= @vehicle.nrchasis %></dd>

  <dt><strong><%= model_class.human_attribute_name(:garantia) %>:</strong></dt>
  <dd><%= @vehicle.garantia %></dd>

  <dt><strong><%= model_class.human_attribute_name(:descripcion) %>:</strong></dt>
  <dd><%= @vehicle.descripcion %></dd>

  <dt><strong><%= model_class.human_attribute_name(:estado) %>:</strong></dt>
  <dd><%= @vehicle.estado %></dd>

</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              vehicles_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_vehicle_path(@vehicle), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              vehicle_path(@vehicle),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
