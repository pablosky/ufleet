<%= form_for @vehicle, :html => { :class => 'form-horizontal' } do |f| %>

  <div class="control-group">
    <%= f.label :patente, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :patente, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :marca, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :marca, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :modelovehiculo, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :modelovehiculo, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :aniovehiculo, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :aniovehiculo, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :color, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :color, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :nrchasis, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :nrchasis, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :garantia, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :garantia, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :descripcion, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :descripcion, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :estado, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :estado, :class => 'text_field' %>
    </div>
  </div>


  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                vehicles_path, :class => 'btn' %>
  </div>
<% end %>
